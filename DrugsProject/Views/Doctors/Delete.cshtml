@model DrugsProject.Models.Doctor.DoctorVM
@using DrugsProject.Models

@{ if (RouteConfig.doctor != null)
    {
        Layout = "~/Views/Shared/DoctorLayoutPage.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/LayoutPage.cshtml";
    }
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/scss/main.css?v=3">
    <link rel="stylesheet" href="~/scss/skin.css">
    <script src="~/script/index.js?v=2"></script>
</head>

<section id="about" style="height:700px">
    <div class="image-holder col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-left">
        <div class="background-imgholder">
            <img src="~/img/user-background.jpg" alt="about" class="img-responsive" style="display:none;" />
        </div>
    </div>

    <div class="container-fluid">
        <div class="col-md-7 col-md-offset-5 col-sm-8 col-sm-offset-2 col-xs-12 text-inner ">
            <div class="text-block text-right" dir="rtl">
                <div class="section-heading">
                    @Html.DisplayHeaderColorful("דוקטור " + Model.privateName, Model.familyName, 2)
                </div>

                <ul class="aboutul">
                    @Html.DisplayItemWithIcon(Model.idNumber, "fa fa-id-card-o")
                    @Html.DisplayItemWithIcon(Model.licenseNumber, "fa fa-address-card-o")
                    @Html.DisplayItemWithIcon(Model.specialization, "fa fa-graduation-cap")
                    @Html.DisplayItemWithIcon(Model.phoneNumber, "fa fa-phone")
                    @Html.DisplayItemWithIcon(Model.email, "fa fa-envelope")
                    @Html.DisplayItemWithIcon(Model.password, "fa fa-key")
                </ul>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="m-20">
                            @Html.ActionLink("חזרה לרשימה", "Index", null, new { @class = "btn btn-primary m-0" })
                            <input type="submit" value="מחק רופא" class="btn btn-default lef slide" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>

