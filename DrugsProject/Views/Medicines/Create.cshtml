@model DrugsProject.Models.MedicineVM
@using DrugsProject.Models
@{ if (RouteConfig.doctor != null)
    {
        Layout = "~/Views/Shared/DoctorLayoutPage.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/LayoutPage.cshtml";
    }
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/scss/main.css?v=2">
    <link rel="stylesheet" href="~/scss/skin.css">
    <link href='select2/dist/css/select2.min.css' rel='stylesheet' type='text/css'>
    <link href='~/scss/dropdown-search.css?v=3' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="~/script/index.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src='select2/dist/js/select2.min.js' type='text/javascript'></script>
    <script src='~/script/index.js?v=2' type='text/javascript'></script>
    <script src='~/script/dropdown-search.js?v=4' type='text/javascript'></script>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section id="about" style="height:650px">
        <div class="image-holder col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-left">
            <div class="background-imgholder" style="background:url(../../img/colorful-backround.jpg)">
                <img src="~/img/colorful-backround.jpg" alt="about" class="img-responsive" style="display:none;" />
            </div>
        </div>

        <div class="container-fluid">
            <div class="col-md-7 col-md-offset-5 col-sm-8 col-sm-offset-2 col-xs-12 text-inner ">
                <div class="text-block text-right" dir="rtl">
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="section-heading">
                            @Html.DisplayHeaderColorful("הוספת", "תרופה", 2)
                        </div>

                        <div class="form-group m-full-20">
                            @Html.LabelFor(model => model.genericaName, htmlAttributes: new { @class = "control-label rig required" })
                            <div class="col-md-9">
                                <div class="container">
                                    @Html.DropDownListForMedicinesName()
                                    @Html.HiddenFor(model => model.genericaName, new { htmlAttributes = new { @class = "form-control rig" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.genericaName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group m-full-20">
                            @Html.LabelFor(model => model.commercialName, htmlAttributes: new { @class = "control-label rig required" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.commercialName, new { htmlAttributes = new { @class = "form-control rig shadow-border" } })
                                @Html.ValidationMessageFor(model => model.commercialName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group m-full-20">
                            @Html.LabelFor(model => model.size, htmlAttributes: new { @class = "control-label rig required" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.size, new { htmlAttributes = new { @class = "form-control rig shadow-border" } })
                                @Html.ValidationMessageFor(model => model.size, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group m-full-20">
                            @Html.LabelFor(model => model.manufacturer, htmlAttributes: new { @class = "control-label rig" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.manufacturer, new { htmlAttributes = new { @class = "form-control rig shadow-border" } })
                                @Html.ValidationMessageFor(model => model.manufacturer, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group m-full-20">
                            @Html.LabelFor(model => model.properties, htmlAttributes: new { @class = "control-label rig required" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.properties, new { htmlAttributes = new { @class = "form-control rig shadow-border" } })
                                @Html.ValidationMessageFor(model => model.properties, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <input type="file" name="ImagePath" id="fileElem" multiple accept="image"/>

                        <br />
                        <div class="form-group">
                            <div class="m-20">
                                @Html.ActionLink("חזרה לרשימה", "Index", null, new { @class = "btn btn-primary rig m-0" })
                                <input type="submit" value="הוסף תרופה" class="btn btn-default lef" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
